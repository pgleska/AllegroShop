<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/list_product_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp">

    <ImageView
        android:id="@+id/list_product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginHorizontal="30dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/list_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:text="Example name"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/list_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textSize="12sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/list_product_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/list_product_price"
                android:layout_alignBaseline="@id/list_product_price"
                android:text="@string/amount"
                android:textColor="@color/black"
                android:textSize="16sp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>